<MDScreen>:
    radius: [25, 0, 0, 0]
    # md_bg_color: app.theme_cls.primary_color

<ListItemWithCheckbox>:
    IconLeftWidget:
        icon: root.icon

    RightCheckbox:
        # count_id: count_id


<PopUpWindow>:
    show_text: show_text
    MDLabel:
        id: show_text
        text: ""
        font_size: 16
        bold: True
        halign: "center"
        theme_text_color: 'Secondary'
        size_hint: 1, 0.2
        pos_hint: {"x":0, "top":0.5}

<PopTopUpWindow>:
    topup_amount: topup_amount
    MDTextField:
        id: topup_amount
        hint_text: 'Top up Amount'
        multiline: False
        pos_hint: {"x": 0.05 , "top":0.65}
        size_hint: 0.45, 0.1
        required: True

    MDRoundFlatButton:
        pos_hint:{"x":0.05,"top":0.15}
        size_hint: 0.9, 0.1
        text: "Top Up"
        on_release:
            root.on_enter()
<PopAccountsWindows>:
    BoxLayout:
        ScrollView:
            MDList:
                id: scroll

    MDRoundFlatButton:
        pos_hint:{"x":0.05,"top":0.15}
        size_hint: 0.9, 0.1
        text: "Continue"
        on_release:
            root.on_enter()


<PopCollaborateWindow>:
    BoxLayout:
        ScrollView:
            MDList:
                id: scroll

    MDRoundFlatButton:
        pos_hint:{"x":0.05,"top":0.15}
        size_hint: 0.9, 0.1
        text: "Collaborate!"
        on_release:
            root.on_enter()
            
<SignUpWindow>:
    name: "signup"

    first_name: first_name
    last_name: last_name
    nric: nric
    address: address
    country_of_birth: country_of_birth
    razerID: razerID

    MDFloatLayout:
        MDLabel:
            text: "Let's Get Started"
            halign: "center"
            size_hint: 0.5, 0.3
            multiline: False
            pos_hint: {"x": 0.25 , "top":1}
            font_size: 32
            bold: True
            theme_text_color: 'Secondary'
            
        MDTextField:
            id: first_name
            hint_text: 'First Name'
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.65}
            size_hint: 0.45, 0.1
            required: True
            helper_text: ''
            helper_text_mode: "on_error"
            
        MDTextField:
            id: last_name
            hint_text: 'Last Name'
            multiline: False
            pos_hint: {"x": 0.55 , "top":0.65}
            size_hint: 0.40, 0.1
            required: True
            helper_text: ''
        
        MDTextField:
            id: nric
            hint_text: 'NRIC'
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.55}
            size_hint: 0.45, 0.1
            required: True
            helper_text: ''
        
        MDTextField:
            id: razerID
            hint_text: 'Razer ID'
            multiline: False
            pos_hint: {"x": 0.55 , "top":0.55}
            size_hint: 0.40, 0.1
            required: True
            helper_text: ''
        
        MDTextField:
            id: address
            hint_text: 'Address'
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.45}
            size_hint: 0.90, 0.1
            required: True
            helper_text: ''
        
        MDTextField:
            id: country_of_birth
            hint_text: 'Country of Birth'
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.35}
            size_hint: 0.90, 0.1
            required: True
            helper_text: ''
        
        MDRoundFlatButton:
            pos_hint:{"x":0.05,"top":0.15}
            size_hint: 0.9, 0.1
            text: "Sign Up"
            on_release:
                root.signupBtn()
                root.manager.transition.direction = "left"
        
        MDFlatButton:
            pos_hint:{"x":0.85,"top":0.25}
            size_hint: 0.1, 0.1
            text: "Back"
            text_color: app.theme_cls.primary_color
            on_release:
                root.manager.transition.direction = "left"
                root.gobackBtn()

<LoginWindow>:
    name: "login"

    username: username
    password: password

    MDFloatLayout:
        Image:
            source: 'Razer-logo.png'
            size_hint: 0.9, 0.5
            pos_hint: {'x': 0.05, 'top':1}
        MDTextField:
            id: username
            hint_text: "Username"
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.5}
            size_hint: 0.9, 0.1
            required: True
            helper_text: ''
            helper_text_mode: 'on_error'

        MDTextField:
            id: password
            hint_text: "Password"
            multiline: False
            required: True
            password: True
            pos_hint: {"x": 0.05, "top":0.4}
            size_hint: 0.9, 0.1

        MDRoundFlatButton:
            pos_hint:{"x":0.05,"top":0.15}
            size_hint: 0.9, 0.1
            text: "Login"
            on_release:
                root.manager.transition.direction = "left"
                root.loginBtn()
        MDFlatButton:
            pos_hint:{"x":0.85,"top":0.35}
            size_hint: 0.1, 0.1
            text: "Sign up"
            text_color: app.theme_cls.primary_color
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()
<MoreWindow>:
    name: "more"

    MDFloatLayout:
        BoxLayout:
            MDList:
                pos_hint:{"x":0.05,"top":0.75}
                OneLineListItem:
                    text: "Updates and Notices"
                OneLineListItem:
                    text: "Membership Tiers and Benefits"
                OneLineListItem:
                    text: "Refer a Friend Or Family"
                OneLineListItem:
                    text: ""
                OneLineListItem:
                    text: "Security Settings"
                OneLineListItem:
                    text: "App Settings"
                OneLineListItem:
                    text: ""
                OneLineListItem:
                    text: "Privacy Policy"
                OneLineListItem:
                    text: "Terms and Conditions"
                OneLineListItem:
                    text: "Contact Us"
    
        MDToolbar:
            id: top_toolbar
            title: ''
            pos_hint: {"top": 1}
            elevation: 10
            right_action_items: [["exit-to-app", lambda x: root.logOut()]]
        MDBottomAppBar:
            MDToolbar:
                icon: "cash-multiple"
                type: "bottom"
                left_action_items: [["home", lambda x: root.comeHome()]]
                right_action_items: [["account", lambda x:root.comeMore()]]
                on_action_button: root.topUp()
                mode: "center"

<ItemDrawer>:
    # text: "Two-line item with avatar"
    # secondary_text: "Secondary text here"
    IconLeftWidget:
        id: icon
        icon: root.icon    

<MainWindow>:
    name: "main"
    list_container: list_container
    MDFloatLayout:
        MDRoundFlatButton:
            pos_hint:{"x":0.05,"top":0.85}
            size_hint: 0.25, 0.1
            text: "Collaborate!"
            on_release:
                root.collaborateBtn()
                root.manager.transition.direction = "left"
        MDLabel:
            text:'Avaliable Balance'
            font_size: 16
            bold: True
            halign: "center"
            theme_text_color: 'Secondary'
            size_hint: 0.5, 0.15
            pos_hint: {"x":0.25, "top":0.95}
        
        MDLabel:
            id: collaborator
            text: ''
            font_size: 12
            bold: True
            halign: "center"
            theme_text_color: 'Secondary'
            size_hint: 0.5, 0.15
            pos_hint: {"x":0.05, "top":0.75}
        

        MDLabel:
            id: balance
            text: ''
            font_size: 32
            bold: True
            halign: "center"
            theme_text_color: 'Secondary'
            size_hint: 0.3, 0.2
            pos_hint: {"x":0.35, "top":0.85}
        
        BoxLayout:
            size_hint: 1, 0.45
            pos_hint: {"x":0, "top":0.65}
            ScrollView:
                MDList:
                    id: list_container
                    
        MDToolbar:
            id: top_toolbar
            title: ''
            pos_hint: {"top": 1}
            elevation: 10
            right_action_items: [["exit-to-app", lambda x: root.logOut()]]
            
            
        MDBottomAppBar:
            MDToolbar:
                icon: "cash-multiple"
                type: "bottom"
                left_action_items: [["home", lambda x: root.comeHome()]]
                right_action_items: [["account", lambda x:root.comeMore()]]
                on_action_button: root.topUp()
                mode: "center"

