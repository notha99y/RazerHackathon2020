<MDScreen>:
    radius: [25, 0, 0, 0]
    # md_bg_color: app.theme_cls.primary_color
<LoginWindow>:
    name: "login"

    username: username
    password: password

    FloatLayout:
        Image:
            source: 'Razer-logo.png'
            size_hint: 0.9, 0.5
            pos_hint: {'x': 0.05, 'top':1}
        MDTextField:
            id: username
            hint_text: "Username"
            # font_size: (root.height**2) / 10**4
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.5}
            size_hint: 0.9, 0.1
            required: True
            helper_text: ''
            helper_text_mode: 'on_error'

        MDTextField:
            id: password
            # font_size: (root.height**2) / 10**4
            hint_text: "Password"
            multiline: False
            required: True
            password: True
            pos_hint: {"x": 0.05, "top":0.4}
            size_hint: 0.9, 0.1

        MDRoundFlatButton:
            pos_hint:{"x":0.05,"top":0.15}
            size_hint: 0.9, 0.1
            # font_size: (root.height**2) / 10**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "left"
                root.loginBtn()
        MDFlatButton:
            pos_hint:{"x":0.85,"top":0.35}
            size_hint: 0.1, 0.1
            # font_size: (root.height**2) / 10**4
            text: "Sign up"
            text_color: app.theme_cls.primary_color
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()
<MainWindow>:
    name: "main"
    username_field: username_field
    created_field: created_field

    FloatLayout:

        Label:
            id: username_field
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Username: "

        Label:
            id: created_field
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        MDRoundFlatButton:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "right"