<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        TextInput:
            id: email
            hint_text: "Email"
            font_size: (root.height**2) / 10**4
            multiline: False
            pos_hint: {"x": 0.05 , "top":0.9}
            size_hint: 0.9, 0.15

        TextInput:
            id: password
            font_size: (root.height**2) / 10**4
            hint_text: "Password"
            multiline: False
            password: True
            pos_hint: {"x": 0.05, "top":0.7}
            size_hint: 0.9, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.height**2) / 10**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "down"
                root.loginBtn()

